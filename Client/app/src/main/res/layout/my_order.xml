<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/order_charge_allpage_bg"
              android:orientation="vertical" >

    <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/order_charge_title_bg"
            android:gravity="center"
            android:text="我的订单"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/all_page_title_text_size" />


   <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="30dp">
       <TextView
               android:layout_width="fill_parent"
               android:layout_marginLeft="14dp"
               android:background="@color/order_charge_allpage_bg"
               android:text="一共3个记录"
               android:textSize="@dimen/all_page_sub_text_size"
               android:textColor="#300"
               android:layout_height="fill_parent"/>
   </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_margin="10dp"
            android:background="@color/myorder_line_bg"
            android:orientation="vertical"
            android:padding="10dp" >




        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" >



            <TextView
                    android:layout_width="@dimen/order_charge_line_w"
                    android:layout_height="@dimen/order_charge_line_h"
                    android:layout_marginLeft="14dp"
                    android:text="@string/myorder_item_name"
                    android:textColor="#000"
                    android:textSize="@dimen/all_page_sub_text_size" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_margin="10dp"
            android:background="@color/myorder_line_bg"
            android:orientation="vertical"
            android:padding="10dp" >




        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" >



            <TextView
                    android:layout_width="@dimen/order_charge_line_w"
                    android:layout_height="@dimen/order_charge_line_h"
                    android:layout_marginLeft="14dp"
                    android:text="@string/myorder_item_name"
                    android:textColor="#000"
                    android:textSize="@dimen/all_page_sub_text_size" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_margin="10dp"
            android:background="@color/myorder_line_bg"
            android:orientation="vertical"
            android:padding="10dp" >




        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" >



            <TextView
                    android:layout_width="@dimen/order_charge_line_w"
                    android:layout_height="@dimen/order_charge_line_h"
                    android:layout_marginLeft="14dp"
                    android:text="@string/myorder_item_name"
                    android:textColor="#000"
                    android:textSize="@dimen/all_page_sub_text_size" />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>