<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_all"
              android:orientation="vertical" >

    <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/order_charge_title_bg"
            android:gravity="center"
            android:text="我要建电桩"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/all_page_title_text_size" />



    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_margin="10dp"
            android:background="@drawable/corners_bg"
            android:orientation="vertical"
            android:padding="10dp" >




        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" >



            <TextView
                    android:layout_width="@dimen/mycharge_laber_w"
                    android:layout_height="@dimen/order_charge_line_h"
                    android:layout_marginLeft="14dp"
                    android:text="申请人/单位"
                    android:textColor="#000"
                    android:textSize="@dimen/all_page_sub_text_size" />

            <EditText
                    android:id="@+id/inputDate"
                    android:layout_width="@dimen/mycharg_edittext_w"
                    android:layout_height="@dimen/order_charge_line_edit_h"
                    android:layout_gravity="center"

                    android:background="#FFF"
                    android:textColor="@color/order_charge_text_color"
                    android:text="清华大学"
                    android:focusable="true"
                    android:inputType="none" />

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_margin="10dp"
            android:background="@drawable/corners_bg"
            android:orientation="vertical"
            android:padding="10dp" >




        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" >



            <TextView
                    android:layout_width="@dimen/mycharge_laber_w"
                    android:layout_height="@dimen/order_charge_line_h"
                    android:layout_marginLeft="14dp"
                    android:text="联系电话"
                    android:textColor="#000"
                    android:textSize="@dimen/all_page_sub_text_size" />

            <EditText
                    android:id="@+id/tel"
                    android:layout_width="@dimen/mycharg_edittext_w"
                    android:layout_height="@dimen/order_charge_line_edit_h"
                    android:layout_gravity="center"

                    android:background="#FFF"
                    android:textColor="@color/order_charge_text_color"
                    android:text="18811610220"
                    android:focusable="true"
                    android:inputType="none" />

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_margin="10dp"
            android:background="@drawable/corners_bg"
            android:orientation="vertical"
            android:padding="10dp" >




        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" >



            <TextView
                    android:layout_width="@dimen/mycharge_laber_w"
                    android:layout_height="@dimen/order_charge_line_h"
                    android:layout_marginLeft="14dp"
                    android:text="电子邮件"
                    android:textColor="#000"
                    android:textSize="@dimen/all_page_sub_text_size" />

            <EditText
                    android:id="@+id/email"
                    android:layout_width="@dimen/mycharg_edittext_w"
                    android:layout_height="@dimen/order_charge_line_edit_h"
                    android:layout_gravity="center"

                    android:background="#FFF"
                    android:textColor="@color/order_charge_text_color"
                    android:text="zxa@163.com"
                    android:focusable="true"
                    android:inputType="none" />

        </LinearLayout>

    </LinearLayout>




    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_margin="10dp"
            android:background="@drawable/corners_bg"
            android:orientation="vertical"
            android:padding="10dp" >




        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" >



            <TextView
                    android:layout_width="@dimen/mycharge_laber_w"
                    android:layout_height="@dimen/order_charge_line_h"
                    android:layout_marginLeft="14dp"
                    android:text="收费标准"
                    android:textColor="#000"
                    android:textSize="@dimen/all_page_sub_text_size" />

            <EditText
                    android:id="@+id/price"
                    android:layout_width="@dimen/mycharg_edittext_w"
                    android:layout_height="@dimen/order_charge_line_edit_h"
                    android:layout_gravity="center"

                    android:background="#FFF"
                    android:textColor="@color/order_charge_text_color"
                    android:text="20元/小时"
                    android:focusable="true"
                    android:inputType="none" />

        </LinearLayout>

    </LinearLayout>



    <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:layout_margin="10dp"
            android:background="@drawable/corners_bg"
            android:orientation="horizontal"
            android:gravity="left"
            android:padding="10dp" >


        <TextView

                android:layout_width="fill_parent"
                android:layout_height="@dimen/order_charge_line_h"
                android:layout_marginLeft="14dp"
                android:text="备注"
                android:textColor="#000"
                android:textSize="@dimen/all_page_sub_text_size" />
        <EditText
                android:id="@+id/charge_place"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/order_charge_line_edit_h"
                android:background="#FFF"
                android:textColor="@color/order_charge_text_color"
                android:focusable="false"
                android:inputType="none" />
    </LinearLayout>


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            >

        <Button
                android:id="@+id/sure"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="确定"
                android:textSize="25dp"
                android:background="@color/order_charge_title_bg"
                />

    </LinearLayout>




</LinearLayout>