<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.icharge.ui.knowledge.MapFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >
        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true" />

        <RelativeLayout
            android:id="@+id/ZoomControlView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/map_zoom_bottom"
            android:layout_marginRight="@dimen/map_zoom_right" >
            <Button
                android:id="@+id/zoom_in"
                android:layout_width="@dimen/map_zoom_button_size"
                android:layout_height="@dimen/map_zoom_button_size"
                android:background="@drawable/zoom_selector_in" />
            <Button
                android:id="@+id/zoom_out"
                android:layout_width="@dimen/map_zoom_button_size"
                android:layout_height="@dimen/map_zoom_button_size"
                android:layout_below="@+id/zoom_in"
                android:background="@drawable/zoom_selector_out" />
        </RelativeLayout>

        <Button
            android:id="@+id/start_search"
            android:layout_width="@dimen/map_zoom_button_size"
            android:layout_height="@dimen/map_zoom_button_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_search"/>
        <Button
            android:id="@+id/start_loc"
            android:layout_width="@dimen/map_zoom_button_size"
            android:layout_height="@dimen/map_zoom_button_size"
            android:layout_below="@+id/start_search"
            android:layout_alignLeft="@+id/start_search"
            android:layout_marginTop="@dimen/map_button_margin"
            android:background="@drawable/btn_location"/>

        <Button
            android:id="@+id/search_station"
            android:layout_width="@dimen/map_zoom_button_size"
            android:layout_height="@dimen/map_zoom_button_size"
            android:layout_below="@+id/start_loc"
            android:layout_alignLeft="@+id/start_loc"
            android:layout_marginTop="@dimen/map_button_margin"
            android:background="@drawable/btn_station"/>
    </RelativeLayout>

</FrameLayout>